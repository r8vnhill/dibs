{
  // This file is not used in compilation. It is here just for a nice editor experience.
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true, // opcional, pero recomendado con React
    "jsx": "react" // o "react-jsx" si usas React 17+
  },
  "paths": {
    "@docusaurus/theme-common/internal": [
      "node_modules/@docusaurus/theme-common/lib/internal"
    ]
  }
}